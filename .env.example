# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ScraperAPI Configuration (for avoiding blocks)
# Sign up at https://www.scraperapi.com/ for 5,000 free requests/month
SCRAPERAPI_KEY=your_scraperapi_key_here

# Alternative: Enable alternative sources when StudyLight is blocked
USE_ALTERNATIVE_SOURCES=false

# Server Configuration
PORT=3001
MAX_OUTPUT_TOKENS=24000
MAX_COMMENTARIES=3
MAX_VERSES=15
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Optional: Proxy Configuration (if not using ScraperAPI)
# PROXY_HOST=your_proxy_host
# PROXY_PORT=your_proxy_port
# PROXY_USER=your_proxy_username
# PROXY_PASS=your_proxy_password