# Backend Environment Variables
# Copy this file to .env for local development
# For Vercel deployment, set these in the Vercel dashboard

# Required: Your Anthropic API key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Port for local backend server (not needed for Vercel)
PORT=3001

# Optional: Maximum output tokens for Claude (default: 8192 for Vercel, 16000 for local)
MAX_OUTPUT_TOKENS=16000

# Optional: Maximum number of commentaries to fetch (default: 2 for Vercel, 3 for local)
MAX_COMMENTARIES=3

# Optional: Anthropic model to use
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Frontend Environment Variables (optional)
# For production, leave VITE_API_URL unset to use relative /api path
# VITE_API_URL=http://localhost:3001/api  # Only for local development with separate backend
